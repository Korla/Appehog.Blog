---
export interface Props {
  title: string;
}
const regex = /\/([^/]+)\.astro$/;
const links = (await Astro.glob("../pages/*.astro")).map(({ file, url }) => ({
  url,
  name: file.match(regex)[1],
}));
---
<meta slot="head" charset="utf-8" />

<div class="container">
  <h1>Appeh√∂g AB</h1>
  {links.map(({ url, name }) => <a href={url}>{name}</a>)}
</div>
<div class="content">
  <slot />
</div>
